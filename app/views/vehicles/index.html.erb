<p id="notice"><%= notice %></p>
  <div class="row" align="center">
    <h1>Vehicles</h1>
  </div>
<div class="row">
  <% @vehicles.each do |vehicle| %>
  <div class="col-sm-3">
    <div class="panel panel-transparent">
      <div class="panel-body">
           <% if vehicle.photo_file_name != nil %>
              <%= image_tag vehicle.photo.url(:thumb) %>
           <% end %>
            <h4><%= vehicle.year %></h4>
            <h3>
              <%= vehicle.make.capitalize %>
              <%= vehicle.model.capitalize %>
            </h3>
             <p>
               <%= number_with_delimiter(vehicle.mileage) %>mi.
             </p>
             <p>
               <%= number_to_currency(vehicle.price) %>
             </p>
        <div class="btn-group">
         <%= link_to 'Show', vehicle, class: "btn btn-default btn-sm" %>
         <%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-default btn-sm" %>
         <%= link_to 'Remove', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm"%>
         </div>
       </div>
       </div>
       </div>
       <% end %>
     </div>
<div class="row" align="center">
  <%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-default" %>
</div>
