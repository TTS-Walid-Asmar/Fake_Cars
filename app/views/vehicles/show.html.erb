<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
     <div class="panel panel-transparent">
       <div class="panel-body">
         <div class="col-md-4">
           <% if @vehicle.photo_file_name != nil %>
              <%= image_tag @vehicle.photo.url(:medium) %>
           <% end %>
         </div>
         <div class="col-md-8">
           <h1><%= @vehicle.make.upcase %> <%= @vehicle.model.upcase %></h1>
           <h2><%= number_to_currency(@vehicle.price) %></h2>
            <h3>
              Year: <%= @vehicle.year %> <br />
              Mileage: <%= number_with_delimiter(@vehicle.mileage) %>
              <br>
              Color: <%= @vehicle.color.capitalize %><br />
              Style: <%= @vehicle.style.capitalize %><br />
              Doors: <%= @vehicle.number_of_doors %><br />
              Transmission: <%= @vehicle.trans %>
            </h3>
            <p>
              Added to Inventory: <%= @vehicle.created_at.localtime.strftime("%b %d, %Y") %>
            </p>
          </div>
          <div class="btn-group">
            <%= link_to 'Edit', edit_vehicle_path(@vehicle), class: "btn btn-default" %>
            <%= link_to 'Back', vehicles_path, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
